{
  "name": "journey_plan",
  "version": "0.1.0",
  "private": true,
  "author": "Peter Meteus",
  "description": "Journey Plan",
  "license": "GG",
  "homepage": "./",
  "main": "build/electron/main.js",
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build && tsc -p electron",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"npm run start\" \"tsc -p electron -w\" \"wait-on http://localhost:3000 && wait-on build/electron/main.js && electronmon .\"",
    "electron:start": "tsc -p electron && electronmon .",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "make": "electron-builder",
    "make:all": "npm run build && tsc -p electron && electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlit3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.15.15",
    "@mui/lab": "^5.0.0-alpha.170",
    "@mui/material": "^5.15.15",
    "@mui/x-date-pickers": "^7.2.0",
    "@react-pdf/renderer": "^3.4.2",
    "@reduxjs/toolkit": "^2.2.3",
    "better-sqlite3": "^ 9.5.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "leaflet": "^1.9.4",
    "primeicons": "^7.0.0",
    "primereact": "^10.6.3",
    "react": "^18.2.0",
    "react-date-range": "^2.0.0-alpha.4",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6",
    "react-leaflet": "^4.2.1",
    "react-pdf": "^7.7.1",
    "react-redux": "^9.1.1",
    "react-resize-detector": "^10.0.1",
    "react-router-dom": "^6.22.3",
    "react-scripts": "5.0.1",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/leaflet": "^1.9.11",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0",
    "electronmon": "^2.0.2",
    "source-map-explorer": "^2.5.3",
    "wait-on": "^7.2.0"
  },
  "electronmon": {
    "patterns": [
      "!*.db"
    ]
  },
  "build": {
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "productName": "JourneyPlan",
    "appId": "com.petermethee",
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "extraFiles": [
      "journey_plan_PROD.db"
    ]
  }
}
