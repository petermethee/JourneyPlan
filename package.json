{
  "name": "journey_plan",
  "version": "0.1.0",
  "private": true,
  "main": "build/electron/main.js",
  "dependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@electron/rebuild": "^3.2.13",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@mui/icons-material": "^5.11.11",
    "@mui/lab": "^5.0.0-alpha.133",
    "@mui/material": "^5.11.15",
    "@mui/x-date-pickers": "^6.9.1",
    "@react-pdf-viewer/core": "^3.12.0",
    "@react-pdf/renderer": "^3.1.14",
    "@reduxjs/toolkit": "^1.9.3",
    "better-sqlite3": "^8.4.0",
    "dayjs": "^1.11.7",
    "dotenv": "^16.3.1",
    "electron-devtools-installer": "^3.2.0",
    "leaflet": "^1.9.4",
    "primeicons": "^6.0.1",
    "primereact": "^9.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.5",
    "react-icons": "^4.8.0",
    "react-leaflet": "^4.2.1",
    "react-pdf": "^7.5.1",
    "react-places-autocomplete": "^7.3.0",
    "react-redux": "^8.0.5",
    "react-resize-detector": "^9.1.0",
    "react-router-dom": "^6.9.0",
    "react-scripts": "5.0.1",
    "react-swipeable-views": "^0.14.0"
  },
  "scripts": {
    "start": "cross-env BROWSER=none react-app-rewired start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"npm run start\" \"tsc -p electron -w\" \"wait-on http://localhost:3000 && wait-on build/electron/main.js && electronmon .\"",
    "electron:build": "tsc -p electron && electron-builder",
    "electron:start": "tsc -p electron && electronmon .",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.4",
    "@types/leaflet": "^1.9.4",
    "@types/leaflet-providers": "^1.2.2",
    "@types/node": "^16.18.21",
    "@types/react": "^18.0.29",
    "@types/react-beautiful-dnd": "^13.1.4",
    "@types/react-dom": "^18.0.11",
    "@types/react-places-autocomplete": "^7.2.9",
    "@types/react-swipeable-views": "^0.13.4",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^23.2.0",
    "electron-builder": "^23.6.0",
    "electronmon": "^2.0.2",
    "react-app-rewired": "^2.2.1",
    "wait-on": "^7.0.1"
  },
  "electronmon": {
    "patterns": [
      "!journey_plan.db"
    ]
  },
  "build": {
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "productName": "JourneyPlan",
    "appId": "com.petermethee",
    "win": {
      "target": "nsis"
    }
  }
}
